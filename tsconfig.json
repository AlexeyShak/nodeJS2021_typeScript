{
    "compilerOptions": {
      "module": "commonjs",
      "rootDir": "src",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
    },

    "lib": ["es2015"],
    "exclude": ["node_modules", "dist"],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "excludeDirectories": ["**/node_modules", "**/dist"],
    }
  }